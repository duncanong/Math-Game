def easy_set():
    global ps
    global dif
    ps=1
    dif.set("Difficulty: Easy")
    Choose_mult=Button(master, text="Easy Multiplication", command=mp, bg='orange').grid(row=4,column=1)
    Choose_divt=Button(master, text="Easy Division", command=dp, bg='red').grid(row=5,column=1)
    Choose_addt=Button(master, text="Easy Addition",command=ap, bg='green').grid(row=2,column=1)
    Choose_subt=Button(master, text="Easy Subtraction", command=sp, bg='yellow').grid(row=3,column=1)
    #quit_game()
