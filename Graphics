#Math Problem Types





def mp():
    global ans
    global inp
    global ps
    if ps==1:
        a=random.randint(1,10)
        b=random.randint(1,10)
        prob=StringVar()
        prob.set(str(a)+" Ã— "+str(b)+" = ")
        ans=a*b
        Pset=Label(master, textvariable=prob,bg='green').grid(row=6, column=0, padx=5)
        inp=Entry(master, text="Enter Your Answer Here",bg='gray').grid(row=6,column=1)
        sub_ans=Button(master, text="Submit Answer", command=check_answer, bg='red').grid(row=6, column=2)
    #elif ps==2:
        
    #elif ps==3:
        
    return True
