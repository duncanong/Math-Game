from tkinter import *
from tkinter import font
import time
import random

master = Tk()

#Functions

def quit_game():
    master.destroy()

#Difficulties

def easy_set():
    global ps
    global dif
    ps=1
    dif.set("Difficulty: Easy")
    Choose_mult=Button(master, text="Easy Multiplication").grid(row=2,column=1)
    Choose_divt=Button(master, text="Easy Division").grid(row=3,column=1)
    Choose_addt=Button(master, text="Easy Addition").grid(row=4,column=1)
    Choose_subt=Button(master, text="Easy Subtraction").grid(row=5,column=1)
    #quit_game()
def med_set():
    global ps
    global dif
    ps=2
    dif.set("Difficulty: Medium")
    Choose_mult=Button(master, text="Medium Multiplication").grid(row=2,column=1)
    Choose_divt=Button(master, text="Medium Division").grid(row=3,column=1)
    Choose_addt=Button(master, text="Medium Addition").grid(row=4,column=1)
    Choose_subt=Button(master, text="Medium Subtraction").grid(row=5,column=1)
    Md.config(state=DISABLED)
    Hd.config(state=DISABLED)
    #quit_game()
def hard_set():
    global ps
    global dif
    ps=3
    dif.set("Difficulty: Hard")
    Choose_mult=Button(master, text="Hard Multiplication").grid(row=2,column=1)
    Choose_divt=Button(master, text="Hard Division").grid(row=3,column=1)
    Choose_addt=Button(master, text="Hard Addition").grid(row=4,column=1)
    Choose_subt=Button(master, text="Hard Subtraction").grid(row=5,column=1)
    #quit_game()

