def check_answer():
    global ans
    global inp
    if ans==inp:
        Cor=Label(master, text="You Are Correct!", bg='green').grid(row=7, column=0)
    else:
        Fal=Label(master, text="You Are Incorrect!", bg='red').grid(row=7, column=1)

